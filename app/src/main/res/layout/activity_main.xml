<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.misao.misao_getset_text.MainActivity">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Name"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Email"
        android:textSize="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tvNum"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Number"
        android:textSize="30dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tvPass"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Password"
        android:textSize="30dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/etEmail"
        android:layout_alignStart="@+id/etEmail"
        android:layout_alignTop="@+id/tvName"
        android:hint="Enter the name" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="140dp"
        android:hint="Enter the Email" />

    <EditText
        android:id="@+id/etNum"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="140dp"
        android:inputType="number"
        android:hint="Enter the Number" />

    <EditText
        android:id="@+id/etPass"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="140dp"
        android:inputType="textPassword"
        android:hint="Enter the Password" />

    <Button
        android:id="@+id/btnShow"
        android:layout_width="200dp"
        android:layout_below="@id/etPass"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Show"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tvResName"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/btnShow"
        android:hint="show the name" />

    <TextView
        android:id="@+id/tvResEmail"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tvResName"
        android:hint="show the Email" />

    <TextView
        android:id="@+id/tvResNum"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tvResEmail"
        android:hint="show the Number" />

    <TextView
        android:id="@+id/tvResPass"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tvResNum"
        android:hint="show the Password" />



</RelativeLayout>
